{
  "scripts": {
    "build": "npm run css && npm run email && npm run alpine && npm run htmx",
    "css:dev": "tailwindcss --silent -i ./src/main.css -o ./app/static/styles.css --watch",
    "css": "tailwindcss -i ./src/main.css -o ./app/static/styles.css --minify",
    "email": "mjml src/login.mjml -o app/templates/email/login.html",
    "alpine": "cp node_modules/alpinejs/dist/cdn.min.js app/static/assets/alpine.min.js",
    "htmx": "cp node_modules/htmx.org/dist/htmx.min.js app/static/assets/htmx.min.js"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.9",
    "alpinejs": "^3.14.9",
    "htmx.org": "^2.0.4",
    "mjml": "^4.15.3",
    "tailwindcss": "^3.4.15"
  }
}
