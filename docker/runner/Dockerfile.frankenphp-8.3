FROM ghcr.io/hunvreus/devpush-frankenphp-base:8.3

HEALTHCHECK NONE

ARG APP_UID=1000
ARG APP_GID=1000

USER root

# Create non-root user
RUN set -eu; \
    group_name=appgroup; \
    existing_group="$(getent group "${APP_GID}" | cut -d: -f1 || true)"; \
    if [ -n "$existing_group" ]; then \
        group_name="$existing_group"; \
    else \
        groupadd --system -g "${APP_GID}" appgroup; \
    fi; \
    if id -u appuser >/dev/null 2>&1; then \
        usermod -u "${APP_UID}" -g "$group_name" appuser; \
    else \
        useradd --system -u "${APP_UID}" -g "$group_name" -o appuser; \
    fi

RUN install -d -m 0755 -o appuser -g "$(id -gn appuser)" /home/appuser /app

WORKDIR /app

# Default Caddy config (Laravel-style)
RUN install -d -m 0755 /etc/caddy && \
    cat > /etc/caddy/Caddyfile <<'EOF'
{
  admin off
}
:8000 {
  root * /app/public
  encode zstd gzip
  php_server
}
EOF

USER appuser

ENV HOME=/home/appuser
ENV XDG_DATA_HOME=/tmp XDG_CONFIG_HOME=/tmp
