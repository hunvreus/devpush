FROM ghcr.io/hunvreus/devpush-frankenphp-base:sha-6743910132208b164d022f74d98b6e03dfe6c14a

USER root

# Default Caddy config (Laravel-style)
RUN install -d -m 0755 /etc/caddy && \
    cat > /etc/caddy/Caddyfile <<'EOF'
{
  admin off
}
:8000 {
  root * /app/public
  encode zstd gzip
  php_server
}
EOF

USER appuser

ENV XDG_DATA_HOME=/tmp XDG_CONFIG_HOME=/tmp
