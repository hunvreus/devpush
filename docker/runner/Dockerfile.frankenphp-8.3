FROM ghcr.io/hunvreus/devpush-frankenphp-base:8.3

USER root

# Default Caddy config (Laravel-style)
RUN install -d -m 0755 /etc/caddy && \
    install -d -m 0755 -o appuser -g appgroup /tmp/caddy && \
    cat > /etc/caddy/Caddyfile <<'EOF'
{
  admin off
  persist_config off
  storage file_system {
    root /tmp/caddy
  }
}
:8000 {
  root * /app/public
  encode zstd gzip
  php_server
}
EOF

USER appuser
