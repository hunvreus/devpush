FROM golang:1.25-bookworm

ARG APP_UID=1000
ARG APP_GID=1000

# Create non-root user
RUN set -eu; \
    group_name=appgroup; \
    existing_group="$(getent group "${APP_GID}" | cut -d: -f1 || true)"; \
    if [ -n "$existing_group" ]; then \
        group_name="$existing_group"; \
    else \
        groupadd --system -g "${APP_GID}" appgroup; \
    fi; \
    if id -u appuser >/dev/null 2>&1; then \
        usermod -u "${APP_UID}" -g "$group_name" appuser; \
    else \
        useradd --system -u "${APP_UID}" -g "$group_name" -o appuser; \
    fi

# Install system dependencies
RUN apt-get update && \
    apt-get install -y --no-install-recommends \
        git \
        ca-certificates \
        make \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Set permissions
RUN chown -R appuser:$(id -gn appuser) /app && \
    mkdir -p /home/appuser/go /home/appuser/.cache/go-build && \
    chown -R appuser:$(id -gn appuser) /home/appuser

# Switch to non-root user
USER appuser

# Set Go environment variables
ENV GOPATH=/home/appuser/go
ENV GOCACHE=/home/appuser/.cache/go-build
ENV GOMODCACHE=/home/appuser/go/pkg/mod
ENV HOME=/home/appuser
ENV PATH=/home/appuser/go/bin:$PATH
