FROM python:3.12-slim

ARG APP_UID=1000
ARG APP_GID=1000

# Create non-root user
RUN set -eu; \
    group_name=appgroup; \
    existing_group="$(getent group "${APP_GID}" | cut -d: -f1 || true)"; \
    if [ -n "$existing_group" ]; then \
        group_name="$existing_group"; \
    else \
        groupadd --system -g "${APP_GID}" appgroup; \
    fi; \
    if id -u appuser >/dev/null 2>&1; then \
        usermod -u "${APP_UID}" -g "$group_name" appuser; \
    else \
        useradd --system -u "${APP_UID}" -g "$group_name" -o appuser; \
    fi

# Install system dependencies
RUN apt-get update && \
    apt-get install -y --no-install-recommends \
        git \
        build-essential \
        python3-dev \
    && rm -rf /var/lib/apt/lists/*

# Install uv
COPY --from=ghcr.io/astral-sh/uv:latest /uv /uvx /bin/

WORKDIR /app

# Set permissions
RUN chown -R appuser:$(id -gn appuser) /app && \
    mkdir -p /home/appuser/.local && \
    chown -R appuser:$(id -gn appuser) /home/appuser

# Switch to non-root user
USER appuser

# Set pip to install packages in user's home
ENV PIP_USER=1
ENV PIP_DISABLE_PIP_VERSION_CHECK=1
ENV PATH=/home/appuser/.local/bin:$PATH
ENV HOME=/home/appuser
