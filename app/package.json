{
  "scripts": {
    "build": "npm run css && npm run email && npm run alpine && npm run htmx && npm run htmx-sse && npm run htmx-preload",
    "css:dev": "tailwindcss --silent -i ./src/styles.css -o ./static/styles.css --watch",
    "css": "tailwindcss -i ./src/styles.css -o ./static/styles.css --minify",
    "email": "mjml src/login.mjml -o ./templates/email/login.html && mjml src/email-change.mjml -o ./templates/email/email-change.html && mjml src/team-invite.mjml -o ./templates/email/team-invite.html",
    "alpine": "cp node_modules/alpinejs/dist/cdn.min.js ./static/assets/alpine.min.js",
    "htmx": "cp node_modules/htmx.org/dist/htmx.min.js ./static/assets/htmx.min.js",
    "htmx-sse": "cp node_modules/htmx-ext-sse/dist/sse.min.js ./static/assets/htmx-sse.min.js",
    "htmx-preload": "cp node_modules/htmx-ext-preload/dist/preload.min.js ./static/assets/htmx-preload.min.js"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.11",
    "alpinejs": "^3.14.9",
    "basecoat-css": "^0.3.0",
    "htmx-ext-preload": "^2.1.1",
    "htmx-ext-sse": "^2.2.3",
    "htmx.org": "^2.0.6",
    "mjml": "^4.15.3",
    "tailwindcss": "^4.1.11"
  }
}
